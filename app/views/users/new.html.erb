<div class="row">
  <div class="col-md-3 col-md-offset-4">
    <h1> Add new user </h1>
    <%= simple_form_for @user do |f| %>
        <%= f.input :email %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>
        <%= f.button :submit %>
    <% end %>
  </div>
</div>
